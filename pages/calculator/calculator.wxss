/* pages/calculator/calculator.wxss */
.main{
  height: 100%;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.header, .body, .screen{
  width: 100%;
}
.header{
  height: 200rpx;
  background-color: #efefef;
  margin-bottom: 10rpx;
}
.body{
  height: 500rpx;
  background-color: darkorange;
}
.screen{
  text-align: right;
  line-height: 200rpx;
  font-size: 56rpx;
  font-weight: bold;
  padding: 0 10rpx 0 0;
  box-sizing: border-box;
}
